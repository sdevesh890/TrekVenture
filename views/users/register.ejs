<% layout('layouts/boilerplate') %>
<title>Register</title>
<link rel="stylesheet" href="/CSS/register.css">
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card custom-card">
        <div class="card-header text-center custom-card-header">
          <h4 class="custom-heading">Register</h4>
        </div>
        <div class="card-body">
          <form action="/register" method="post" novalidate class="validated-form">
            <div class="form-group m-3">
              <label for="email" class="custom-label">Email</label>
              <input
                type="email"
                class="form-control custom-input"
                id="email"
                placeholder="Enter your email"
                required
                name="email"
              />
              <div class="valid-feedback custom-valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="form-group m-3">
              <label for="username" class="custom-label">Username</label>
              <input
                type="text"
                class="form-control custom-input"
                id="username"
                placeholder="Enter your username"
                required
                name="username"
              />
              <div class="valid-feedback custom-valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="form-group m-3">
              <label for="password" class="custom-label">Password</label>
              <input
                type="password"
                class="form-control custom-input"
                id="password"
                placeholder="Enter your password"
                required
                name="password"
              />
              <div class="valid-feedback custom-valid-feedback">
                Looks good!
              </div>
            </div>
            <button type="submit" class="btn btn-custom btn-block m-3">
              Register
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
