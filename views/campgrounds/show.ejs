<% layout('layouts/boilerplate') %>
<title><%= camp.title %></title>
<style>
    @keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animated {
        animation-duration: 1s;
        animation-fill-mode: both;
    }
    .fadeInUp {
        animation-name: fadeInUp;
    }
    .card {
        max-width: 800px;
        margin: auto;
    }
    .camp-img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: 0.25rem 0.25rem 0 0;
    }
    .card-img-overlay {
        background: rgba(0, 0, 0, 0.5);
        border-radius: 0.25rem 0.25rem 0 0;
    }
    .card-title {
        margin-bottom: 0;
    }
    a
    {
       text-decoration: none;
    }
    .card-btn a , form  
    {
        padding: 0.5rem;
    }
</style>

<div class="container">
    <div class="card text-white bg-dark mb-3 animated fadeInUp">
        <img class="camp-img" src="<%= camp.image %>" alt="Card image">
        <div class="card-img-overlay d-flex flex-column justify-content-end">
            <h2 class="card-title"><%= camp.title %></h2>
            <p class="card-text"><%= camp.location %></p>
        </div>
    </div>

    <div class="card border-dark mb-3 animated fadeInUp" style="animation-delay: 0.5s;">
        <div class="card-header bg-primary text-white">
            Price: $<%= camp.price %>
        </div>
        <div class="card-body">
            <h5 class="card-title">Description</h5>
            <p class="card-text"><%= camp.description %></p>
        </div>
    </div>
    
    <div class="card-btn fadeInUp" style="animation-delay: 1s;">
        <a class="card" href="/campgrounds/<%= camp._id %>/edit">
          <button class="btn btn-warning">Edit</button>
        </a>
        <form class="card" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="post">
            <button class="btn btn-danger delete-btn">Delete</button>
        </form>
    </div>
</div>
