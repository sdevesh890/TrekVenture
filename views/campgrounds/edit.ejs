<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= camp.title %> | Edit</title>
</head>
<body>
    <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="post">
        <div>
         <label for="title">Title:</label>
         <input type="text" name="campgrounds[title]" id="title" value="<%= camp.title %>">
        </div>
 
        <div>
         <label for="location">Location:</label>
         <input type="text" name="campgrounds[location]" id="location" value="<%= camp.location %>">
        </div>
        <button type="submit">Edit Campground</button>
     </form>
</body>
</html>